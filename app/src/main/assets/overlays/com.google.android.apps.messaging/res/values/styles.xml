<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="ConversationMessage">
        <item name="android:textColor">#fffafafa</item>
    </style>
    <style name="ConversationMessageTimestamp">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ConversationMessageStatus">
        <item name="android:textColor">#fffafafa</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ConversationMessageInfo">
        <item name="android:textColor">#fffafafa</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Base.Widget.AppCompat.EditText" parent="@android:style/Widget.Material.EditText">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/background_material_dark</item>
    </style>
    <style name="RecipientEditTextViewBase" parent="@android:style/Widget.Material.AutoCompleteTextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme" />
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>

    <style name="BugleTheme.ConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleTheme.BigTitle">
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>
    <style name="BugleTheme.ArchivedConversationListActivity" parent="@*com.google.android.apps.messaging:style/BugleTheme">
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>

</resources>
