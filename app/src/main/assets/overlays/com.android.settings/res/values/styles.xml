<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PreferenceFragmentListSinglePane" parent="@*android:style/PreferenceFragmentList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@*android:color/background_material_dark</item>
    </style>
    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@*android:color/material_grey_800</item>
        <item name="android:elevation">0.0dip</item>
    </style>
    <style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Small">
       <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffc41414</item>
        <item name="android:letterSpacing">0.3</item>
    </style>
    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:colorPrimary">@*android:color/material_grey_800</item>
        <item name="android:colorPrimaryDark">@*android:color/material_grey_850</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>
    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorPrimary">@*android:color/material_grey_800</item>
        <item name="android:colorPrimaryDark">@*android:color/material_grey_850</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>
    <style name="SecurityPreferenceButtonContainer" parent="@android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="SecurityPreferenceButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>
    <style name="FallbackHome" parent="@android:style/Theme.DeviceDefault" />
    <style name="Theme.SettingsAlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" />
    <style name="Theme.DateTimeSettingsSetupWizard" parent="@android:style/Theme.Material.NoActionBar" />
    <style name="Theme.SettingsDialog" parent="@android:style/Theme.Material.Dialog.NoActionBar" />
    <style name="Theme.SettingsLicenseActivity" parent="@android:style/Theme.Material.Panel" />
    <style name="Theme.AppPicker" parent="@android:style/Theme.Material.Dialog" />
    <style name="Theme.VoiceActivity" parent="@android:style/Theme.Material" />
</resources>
